<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firm_color_gray">


    <TextView
        android:id="@+id/tv_need_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/firm_color_black"
        android:gravity="center_horizontal"
        android:text="@string/need_help"
        android:textColor="@color/text_color_dark_gray"
        android:textSize="35sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/text_for_need_help"
                android:textSize="18sp"
                android:textColor="@color/text_color_dark_gray"/>

            <Button
                android:id="@+id/bt_for_need_help"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/b_ok" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>