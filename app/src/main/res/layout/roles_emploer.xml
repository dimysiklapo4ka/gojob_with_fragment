<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firm_color_gray">


        <TextView
            android:id="@+id/tv_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="@string/employer"
            android:gravity="center_horizontal"
            android:background="@color/firm_color_black"
            android:textColor="@color/text_color_dark_gray"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_for_employer"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_color_dark_gray"/>

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/b_ok"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/bt_for_employer" />

            </LinearLayout>
            </ScrollView>
    </LinearLayout>
